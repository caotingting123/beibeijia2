/* miniprogram/pages/index/index.wxss */
@import "../search/search.wxss";
@import "../mine/mine.wxss";
@import "../community/community.wxss";
.index-top{
 background: -webkit-linear-gradient(left,#f6f6f6,rgb(211, 248, 242),lightblue,
  rgb(211, 248, 242),#f6f6f6);
  border:none;
}
.word_index_container {
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
  align-items:center;

}


.word_index_circle{
  text-align:center;
  position: relative;
  height:150rpx;
  align-items: center; /*定义body的元素垂直居中*/
  justify-content: center; /*定义body的里的元素水平居中*/

  margin:0 30rpx;
  border-radius: 5px;

}
.word_index_progress{
  top:25%;
}
.word_index_task{
  
  text-align:center;
  align-items:center;
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height:200rpx;
}
.status{
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}
.word_index_start_and_status{
  
  text-align:center;
  align-items:center;
}

.add_start_btn{
  width: 100%;
  position: relative;
  bottom:  50%;
  /* bottom 是根据 tab-bar 的高度为70px 设置的 */
}


.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 8px;
  padding-right: 8px;
}
.content-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10px;
  border-radius: 10rpx;
  border: 2rpx solid #efefef;
}
.content-item-img {
  margin-bottom: 10rpx;
}
.content-item-text {
  margin-top: 10rpx;
  font-size: 35rpx;
  color: #333333;
}
.grid_style{
  width: 100%;
  position: relative;
  /* bottom 是根据 tab-bar 的高度为70px 设置的 */
}
.grid_index{
  
  height: 240rpx;
}
.grid-img{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}
