<!--miniprogram/pages/mine/mine.wxml-->
<template name="mineItem">
<view wx:if="{{isList.mine}}" class="mine">

  <!-- 用户 openid -->
  
  <view class="mine-userinfo">
      <button 
        open-type="getUserInfo" 
        bindgetuserinfo="onGetUserInfo"
        class="userinfo-avatar"
        style="background-image: url({{avatarUrl}})"
      ></button>
      <view class="username">
       {{userInfo.nickName}}
      </view>
  </view>
  
  
  <i-cell-group i-class="userOperation">
      <i-cell title="学习进度" is-link url="/pages/dashboard/index"> </i-cell>
      
        <i-cell title="学习设置" is-link="true" url="pages/index/index" link-type="navigateTo"></i-cell>
    
      <i-cell title="我的收藏" is-link url="/pages/dashboard/index"></i-cell>
      <i-cell title="夜间模式">
          <switch slot="footer" checked />
      </i-cell>
  </i-cell-group>
  <i-cell-group i-class="userOperation">
    <i-cell title="关于我们" is-link url="/pages/dashboard/index"> </i-cell>
  </i-cell-group>
</view>
</template>

