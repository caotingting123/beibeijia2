<!--miniprogram/pages/mine/mine.wxml-->
<template name="mineItem">
<view wx:if="{{isList.mine}}" class="mine">

  <!-- 用户 openid -->
  <i-cell-group>
  <view class="userinfo">
      <button 
        open-type="getUserInfo" 
        bindgetuserinfo="onGetUserInfo"
        class="userinfo-avatar"
        style="background-image: url({{avatarUrl}})"
      ></button>
      <view>
       {{userInfo.nickName}}
      </view>
    </view>
  </i-cell-group>
  
  <i-cell-group class="userOperation">
      <i-cell title="学习进度" is-link url="/pages/dashboard/index"> </i-cell>
      <i-cell title="只显示箭头" is-link></i-cell>
      <i-cell title="跳转到首页" is-link url="/pages/dashboard/index"></i-cell>
      <i-cell title="只有 footer 点击有效" is-link url="/pages/dashboard/index" only-tap-footer></i-cell>
      <i-cell title="开关">
          <switch slot="footer" checked />
      </i-cell>
  </i-cell-group>
  <!-- <i-cell-group>
    <i-button bind:click="onExit" type="error">退出</i-button>
  </i-cell-group> -->
</view>
</template>

