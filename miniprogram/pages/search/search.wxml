<template name="searchItem">
<view wx:if="{{isList.search}}" class="search">
  <i-panel>
      <i-input value="{{ value7 }}" type="number"  mode="wrapped" placeholder="请输入查询单词" />
  </i-panel>
  <i-panel class="search-btn">
    <i-button bind:click="handleClick" type="primary" size="10px" >语音查词</i-button>
    <i-button bind:click="handleClick" type="primary" size="20px" >图片查词</i-button>
  </i-panel>
</view>
</template>
